{
  "multipart": [
    {
      "when": { "axis": "z" },
      "apply": {
        "model": "powergrid:block/transformer/small"
      }
    },
    {
      "when": {
        "AND": [
          { "axis": "z" },
          { "coils": "1|2" }
        ]
      },
      "apply": {
        "model": "powergrid:block/transformer/small_coil1"
      }
    },
    {
      "when": {
        "AND": [
          { "axis": "z" },
          { "coils": "2" }
        ]
      },
      "apply": {
        "model": "powergrid:block/transformer/small_coil2"
      }
    },
    {
      "when": { "axis": "x" },
      "apply": {
        "model": "powergrid:block/transformer/small",
        "y": 90
      }
    },
    {
      "when": {
        "AND": [
          { "axis": "x" },
          { "coils": "1|2" }
        ]
      },
      "apply": {
        "model": "powergrid:block/transformer/small_coil1",
        "y": 90
      }
    },
    {
      "when": {
        "AND": [
          { "axis": "x" },
          { "coils": "2" }
        ]
      },
      "apply": {
        "model": "powergrid:block/transformer/small_coil2",
        "y": 90
      }
    }
  ]
}